<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/bgBottomNavigation"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleItemMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            tool:text="Nguyễn Lương Bằng" />

        <ImageView
            android:id="@+id/iconFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic__favorite_24_unselect" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/descriptionItemMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cấm từ chiều ra vào vào giờ cao điểmdddddddddddddddddddddddddddddddddddddddddddddddddđ."
        android:textColor="#fff" />


</LinearLayout>